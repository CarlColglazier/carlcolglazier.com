{
  "name": "carlcolglazier.com",
  "version": "1.0.0",
  "description": "A website.",
  "private": true,
  "scripts": {
    "prebuild": "echo Building...",
    "build": "npm run-script prepare && npm run-script less && npm run-script minify",
    "prepare": "./node_modules/.bin/rimraf public && hugo",
    "less": "./node_modules/.bin/lessc --clean-css ./public/css/style.less ./public/css/style.css",
    "minify": "./node_modules/.bin/html-minifier --input-dir public --output-dir public -c html-minify.conf --file-ext html",
    "postbuild": "./node_modules/.bin/rimraf public/css/*.less",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarlColglazier/carlcolglazier.com.git"
  },
  "author": "Carl Colglazier",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CarlColglazier/carlcolglazier.com/issues"
  },
  "homepage": "http://carlcolglazier.com/",
  "devDependencies": {
    "html-minifier": "^3.4.3",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "rimraf": "^2.6.1"
  }
}
